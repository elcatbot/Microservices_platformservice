# Example environment variables for local development
# Copy to .env and update values as needed

# ASP.NET environment
ASPNETCORE_ENVIRONMENT=Development

# Service URLs (for local debugging)
PLATFORM_SERVICE__URL=http://localhost:5001
COMMANDS_SERVICE__URL=http://localhost:6001

# RabbitMQ
RABBITMQ__HOST=platform-rabbitmq
RABBITMQ__PORT=5672
RABBITMQ__USERNAME=guest
RABBITMQ__PASSWORD=guest

# SQL Server (used by PlatformService)
SQLSERVER__HOST=platform-sqlserver
SQLSERVER__PORT=1433
SQLSERVER__SA_PASSWORD=YourPassword123
SQLSERVER__DB=platformsdb

# Connection string example (for reference)
# CONNECTIONSTRINGS__PLATFORMSCONN=Server=${SQLSERVER__HOST};Initial Catalog=${SQLSERVER__DB};User ID=sa;Password=${SQLSERVER__SA_PASSWORD};TrustServerCertificate=True;
